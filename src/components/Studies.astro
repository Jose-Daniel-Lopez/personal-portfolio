---
import StudiesItem from "./StudiesItem.astro";
import GraduationCap from "./icons/GraduationCap.astro";
const STUDIES = [
  {
    date: "Junio 2024",
    title: "Grado Superior en Desarrollo de Aplicaciones Web",
    place: "ITEC | Centro Oficial de FP",
    description:
      "Honores: Nota media de 9,08 y matrícula de honor en la asignatura de Programación en Entorno Servidor.",
  },
  {
    date: "Junio 2022",
    title: "Bachillerato Tecnológico",
    place: "IES Pintor Jose María Fernandez",
    description:
      "Honores: Matrícula de honor en la asignatura de Programación.",
  },
  {
    date: "Marzo 2025",
    title:
      "Aplicaciones Industriales del Aprendizaje Automático y la Inteligencia Artificial ",
    place: "Formación Online",
    description: "Acreditación verificada por el Gobierno de España y el SEPE.",
  },
  {
    date: "Junio 2020",
    title: "First Certificate in English",
    place: "Cambridge Assessment English",
    description:
      "Titulación de inglés B2 acreditada por la Universidad de Cambridge.",
  },
];
---

<!-- Terminal Window Top Bar -->
<div class="flex mb-2 items-center gap-1 w-fit select-none">
  <span class="w-3 h-3 rounded-full bg-red-500"></span>
  <span class="w-3 h-3 rounded-full bg-yellow-500"></span>
  <span class="w-3 h-3 rounded-full bg-green-500"></span>
</div>
<!-- ASCII Box for Studies -->
<div
  class="font-mono text-sm leading-tight max-w-4xl mx-auto p-4"
  style="--box-border-color: var(--background2); --box-border-width: 1px; background-color: var(--background1);"
>
  <div class="flex items-center gap-2 mb-4">
    <GraduationCap class="size-6 block shrink-0" />
    <h2 is-="h3">Mis estudios</h2>
  </div>
  <!-- Timeline -->
  <div class="relative">
    <div class="absolute inset-0"></div>
    {
      STUDIES.map((stud) => (
        <div
          box-="square"
          class="relative mb-6 p-4 bg-[var(--background1)]"
          style="border-color: var(--box-border-color); border-width: var(--box-border-width);"
          aria-label={`Estudios en ${stud.place}`}
        >
          <StudiesItem {...stud} />
        </div>
      ))
    }
  </div>
</div>
